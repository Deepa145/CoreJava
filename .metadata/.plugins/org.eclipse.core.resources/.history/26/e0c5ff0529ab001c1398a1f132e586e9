package com.chainsys.firstlesson;

public class Diamandpattern {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
         diamand();
	}

	public static void diamand()
	{
		int countA=0;
		for(countA=1;countA<=6;countA++)
		{
			for(int countB=1;countB<countA;countB++)
			{
				System.out.print(countB);
			}
			for(int countC=countA;countC<countA;countC--)
			{
				System.out.print(countC);
			}
			System.out.println(" ");
		}
	}
	
}
